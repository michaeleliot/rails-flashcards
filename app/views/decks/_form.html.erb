<%= form_with model: deck do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name, class: "dark:bg-slate-700 rounded" %>
    <% deck.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description, class: "dark:bg-slate-700 rounded" %><br>
    <% deck.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="flex flex-row items-center gap-x-3">
    <%= form.label :is_public %><br>
    <%= form.check_box :is_public %><br>
    <% deck.errors.full_messages_for(:is_public).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit "Update" %>
  </div>
<% end %>
