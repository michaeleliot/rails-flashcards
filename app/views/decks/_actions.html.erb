<%= link_to "<-", decks_path, class: "outline outline-2 bg-white-500 hover:bg-white-700 text-black font-bold px-2 rounded" %>
<div class="flex flex-col md:flex-row gap-2">
  <h1><%= @deck.name %></h1>
  <h1><%= @deck.description %></h1>
</div>
<div class="flex flex-row gap-2">
  <% if @deck.is_owner(current_user) %>
    <p><%= link_to "Edit", edit_deck_path(@deck) %></p>
    <p><%= link_to "Destroy", deck_path(@deck), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    } %></p>
  <% end %>
  <% if @deck.cards_to_review(current_user).count > 0 %>
    <%= link_to 'Start', study_deck_path(@deck), remote: true %>
  <% end %>
</div>
